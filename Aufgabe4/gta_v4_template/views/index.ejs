<!DOCTYPE html>

<!-- File origin: VS1LAB A1a -->
<html lang="en" xmlns="http://www.w3.org/1999/html">

<head>
    <link rel="icon" href="./public/images/favicon.ico">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GeoTagApp</title>
    <link type="text/css" rel="stylesheet" href="../public/stylesheets/style.css"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
<header class="header">
    <img src="../public/images/location.png" class="header__image" alt="an image of a map and location">
    <h1 class="header__title">GeoTagApp</h1>
    <nav class="header__navigation">
        <a href="#">About</a> | <a href="#">Help</a> | <a href="/">Home</a>
    </nav>
</header>

<main class="main">
    <div class = "row">
        <div class  = "col-4 tagging__layout">
            <section class="main__tagging tagging">
                <h2>Tagging</h2>

                <!-- ############### VS1Lab 1a Form 1 Start -->
                <form id="tag-form">
                    <!-- ... your code here ... -->
                    <fieldset id ="tag_fieldset">
                        <legend>Add a new GeoTag</legend>

                        <label for="lat">Latitude</label>
                        <input type="text" name="latitude_field_name" id="lat" readonly value="<%= lat %>"/>

                        <label for="long">Longitude:</label>
                        <input type="text" name="longitude_field_name" id="long" readonly value="<%= long %>"/>

                        <label for="name">Name:</label>
                        <input type="text" name="name_field_name" id="name" placeholder="e.g. Central Berlin" maxlength=10 required/>

                        <label for="hash">Hashtag: </label>
                        <input type="text" name="hashtag_field_name" id="hash" placeholder="e.g. #ber" pattern="#[A-Za-z]{1,10}"/>

                        <div class="button-field">
                            <input type="button" value="Refresh" id="button_refresh">
                            <input type="submit" value="Add Tag" id="submit_geotag"/>
                        </div>

                    </fieldset>

                </form>
                <!-- ############### VS1Lab 1a Form 1 End -->
            </section>
        </div>
        <div class="col-8 discovery__layout">
            <section class="main__discovery discovery">
                <h2 class="discovery__title">Discovery</h2>

                <!-- ############### VS1Lab 1a Form 2 Start -->
                <form class="discovery__search" id="discoveryFilterForm">

                    <!-- ... your code here ... -->
                    <fieldset id="disc_fieldset">
                        <legend>Search</legend>
                        <div class="row">
                            <div class="col-4">
                                <label for="disc">Search term or keywords:</label>
                                <input type="text" name="discovery_field_name" id="disc_name" placeholder="e.g. Berlin" maxlength=10 required/>

                                <input type="hidden" name="discovery_hidden_latitude" id="discovery_hidden_latitude">
                                <input type="hidden" name="discovery_hidden_longitude" id="discovery_hidden_longitude">


                                <input type="submit" value="Search" />
                            </div>
                        </div>
                    </fieldset>

                </form>
                <!-- ############### VS1Lab 1a Form 2 End -->

                <div class="discovery__wrapper">
                    <div class="row">
                        <div class="col-8">
                            <div class="discovery__map">
                                <img src="./public/images/mapview.jpg" alt="a map with locations" id="mapView" data-tags="<%= tagsjson %>"/>
                                <div class="zoom-Slider">
                                    <label for="zoomSlider_input">Zoom</label>
                                    <input id="zoomSlider_input" type="range" max="18" min="2" value="16" >
                                </div>
                            </div>
                        </div>
                        <div class="col-5 container">
                            <div class="discovery__taglist">
                                <ul class="discovery__results" id="discoveryResults">
                                    <% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
                                        <li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
                                    <% }); %>
                                </ul>
                            </div>
                            <div class="page_btn_field">
                                <div class="row">
                                    <input type="button" id="prev_page" value="Previous"></button>
                                    <input type="button" id="page" value="1"></button>
                                    <input type="button" id="next_page" value="Next"></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</main>
<footer class="footer">
    <span>(c) 2021/22 HKA_IWI_VSYS</span>
</footer>
</body>

<!-- Load JavaScripts
        ================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script type="module" src="../public/javascripts/geotagging.js"></script>

</html>

